#Short.jsx#
import React, { useState } from 'react'

const Short = () => {
    const[visible, isVisible] =useState(true);


    function toggle(){
        isVisible(!visible);
    }
  return (
    <>
   <h1>{visible && "HELLO"}</h1>
   <button onClick={toggle}>
    {visible ? "HIDE" : "SHOW"}
   </button>
   </>
  )
}
export default Short;
