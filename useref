const App=()=>{
return(
    <>
   <Useref />
    </>
)
}
export default App;

#Useref.jsx#
import React from 'react'
import { useRef } from 'react';

const Useref = () => {

    const heading= useRef(null);

    function change(){
            heading.current.TextContent="HELLO WORLD";
            heading.current.style.color="red";
            heading.current.style.fontSize="50px";
            }
  return (
    <>
    <h1 ref={heading}>welcome</h1>
    <button onClick={change}>Change</button>
    </>
  )
}
export default Useref;
