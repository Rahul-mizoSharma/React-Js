#Controlled.jsx#
import React from 'react'
import { useState } from 'react';

const Controlled = () => {
    const[user, setUser] = useState("");


    function change(e){
        setUser(e.target.value);
    }

  return (
    <>
    <h1>{user}</h1>
            <input type="text" value={user} onChange={change} />
    </>
  )
}

export default Controlled;
